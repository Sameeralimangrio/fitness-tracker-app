Text,


return (
<ScrollView contentContainerStyle={{ padding: 16 }}>
<Text style={{ fontWeight: 'bold' }}>Add Custom Exercise</Text>
<TextInput placeholder="Name" value={name} onChangeText={setName} style={styles.input} />
<TextInput placeholder="Image URL (optional)" value={image} onChangeText={setImage} style={styles.input} />
<TextInput placeholder="Short description" value={description} onChangeText={setDescription} style={[styles.input, { height: 100 }]} multiline />
<Button title="Save" onPress={addExercise} />
</ScrollView>
);
}


function QuotesScreen() {
const [quotes, setQuotes] = useState([]);
const [loading, setLoading] = useState(true);


useEffect(() => {
(async () => {
try {
const res = await fetch('https://type.fit/api/quotes');
const data = await res.json();
setQuotes(data.slice(0, 30));
} catch (e) {
console.error(e);
} finally {
setLoading(false);
}
})();
}, []);


if (loading) return (
<View style={styles.center}><Text>Loading quotes...</Text></View>
);


return (
<FlatList
data={quotes}
keyExtractor={(item, idx) => String(idx)}
renderItem={({ item }) => (
<View style={styles.quoteRow}>
<Text style={{ fontStyle: 'italic' }} numberOfLines={3}>{item.text}</Text>
<Text style={{ marginTop: 6, textAlign: 'right' }}>{item.author || 'Unknown'}</Text>
</View>
)}
contentContainerStyle={{ padding: 12 }}
/>
);
}


export default function App() {
return (
<NavigationContainer>
<Stack.Navigator>
<Stack.Screen name="Home" component={HomeScreen} />
<Stack.Screen name="Detail" component={DetailScreen} options={{ title: 'Exercise Detail' }} />
<Stack.Screen name="Add" component={AddScreen} options={{ title: 'Add Exercise' }} />
<Stack.Screen name="Quotes" component={QuotesScreen} options={{ title: 'Motivation' }} />
</Stack.Navigator>
</NavigationContainer>
);
}


